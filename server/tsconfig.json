{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Changed from "./server/types" to "./types"
    ]
  },
  "include": [
    "**/*.ts", // Changed from "server/**/*.ts" to "**/*.ts"
    "types/**/*.d.ts" // Changed from "server/types/**/*.d.ts" to "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}